{
    "extends": "eslint-config-es5",
    "rules": {
        "one-var": [ 0, "never" ],
        "indent": ["error", "tab"],
        "no-var":0,
        "global-require":0,
        "mocha/no-exclusive-tests": "error",
        "chai-expect/missing-assertion": 2,
        "chai-expect/terminating-properties": 1,
        "func-names": 0,
        "prefer-arrow-callback": 0,
        "curly":0,
        "space-before-function-paren":0,
        "no-console": 0
    },
    "plugins":[
         "chai-expect",
         "mocha"
    ],
    "env":{
        "browser":true,
        "node":true
    }
}